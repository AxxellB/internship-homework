{% extends 'base.html.twig' %}

{% block title %}Hello editor!{% endblock %}

{% block body %}
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h1>Editors List</h1>
            <a href="{{ path('editor_create') }}" class="btn btn-success">Create Editor</a>
        </div>
        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Editor Number</th>
                <th>Specialty</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for editor in editors %}
                <tr>
                    <td>{{ editor.id }}</td>
                    <td>{{ editor.name }}</td>
                    <td>{{ editor.editorNumber }}</td>
                    <td>{{ editor.specialty }}</td>
                    <td>
                        <a href="{{ path('editor_edit', { 'id': editor.id }) }}" class="btn btn-primary">Edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">No editors found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
