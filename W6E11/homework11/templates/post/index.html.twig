{% extends 'base.html.twig' %}
 {% block title %}Posts{% endblock %}

    {% block body %}
        <div class="container mt-5">
            <h1 class="mb-4">Posts</h1>
            <div class="mb-3">
                <a class="btn btn-success" href="{{ path('app_post_create') }}">Create Post</a>
            </div>
            <div class="row row-cols-1 row-cols-md-3 g-4">
                {% for post in posts %}
                    <div class="col">
                        <div class="card h-100">
                            <div class="card-body">
                                <h5 class="card-title">{{ post.name }}</h5>
                                <p class="card-text">
                                    {{ post.description|slice(0, 100) }}...
                                </p>
                                <a href="{{ path('post_show', { id: post.id }) }}" class="btn btn-primary">Read More</a>
                                <a href="{{ path('app_post_edit', { id: post.id }) }}" class="btn btn-primary">Edit
                                    Post</a>
                                <a href="{{ path('post_show', { id: post.id }) }}" class="btn btn-primary">Delete
                                    Post</a>
                            </div>
                            <div class="card-footer">
                                <small class="text-muted">By {{ post.author.name }}
                                    on {{ post.date_added|date('d-m-Y') }}</small>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <div class="col-12">
                        <p>No posts found.</p>
                    </div>
                {% endfor %}
            </div>
        </div>
    {% endblock %}
