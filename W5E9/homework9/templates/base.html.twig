<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
              integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
              crossorigin="anonymous">
    {% endblock %}

    {% block javascripts %}
        {% block importmap %}{{ importmap('app') }}{% endblock %}
        <script src="{{ asset('js/categories.js') }}"></script>
    {% endblock %}
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
                <a class="nav-link" href="{{ path('app_categories_display') }}">Categories</a>
            </li>
            <li class="nav-item active">
                <a class="nav-link" href="{{ path('app_products_display') }}">Products</a>
            </li>
            <li class="nav-item active">
                <a class="nav-link" href="{{ path('app_customers_display') }}">Customers</a>
            </li>
            <li class="nav-item active">
                <a class="nav-link" href="{{ path('app_orders_display') }}">Orders</a>
            </li>
        </ul>
    </div>
</nav>
{% block body %}{% endblock %}
</body>
</html>
